<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yanzhenjie.statusview.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:fitsView="@+id/root_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="@color/green">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:paddingRight="@dimen/x20"
            app:srcCompat="@drawable/icon_t_back" />

        <TextView
            android:id="@+id/project_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="背景音乐"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/next_step_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/y8"
            android:layout_marginRight="@dimen/x8"
            android:text="保存"
            android:textColor="@color/blue_txt"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:padding="@dimen/x10"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:id="@+id/btn_mode_blue_local"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/btn_bluetooth" />


    <ImageView
        android:id="@+id/bar1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:visibility="visible"
        android:background="@drawable/img_yymb_music" />


    <com.massky.sraum.view.VerticalSeekBarNew
        android:id="@+id/seekbar_reverse"
        android:layout_width="wrap_content"
        android:thumb="@drawable/seek_bar_thumb"
        android:progressDrawable="@drawable/seek_bar_background"
        android:max="30"
        android:progress="0"
        android:layout_height="100dp"
        android:visibility="gone"
        android:layout_marginLeft="30dp" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <com.massky.sraum.view.VerticalSeekBarNew
            android:id="@+id/music_seek_bar"
            android:layout_width="wrap_content"
            android:thumb="@drawable/seek_bar_thumb"
            android:progressDrawable="@drawable/seek_bar_background"
            android:max="30"
            android:progress="0"
            android:layout_height="120dp"
            android:layout_marginRight="@dimen/y22"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_above="@+id/music_linear"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/music_linear"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/loop_rel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/loop_img"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/btn_loop" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pre_rel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pre_img"
                    android:layout_centerInParent="true"
                    android:src="@drawable/btn_next" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/begin_rel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/begin_img"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/btn_begin" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/next_rel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/next_img"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/btn_pre" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/volume_rel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/openbtn_tiao_guang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/btn_volume" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>