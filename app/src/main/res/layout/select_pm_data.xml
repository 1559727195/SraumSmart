<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.yanzhenjie.statusview.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:fitsView="@+id/root_layout" />


    <RelativeLayout
        android:id="@+id/rel_tou"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/status_view"
        android:background="@color/green">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="20dp"
            app:srcCompat="@drawable/icon_t_back" />

        <TextView
            android:id="@+id/project_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择PM值"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/next_step_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/rel_tou"
        android:id="@+id/guang_zhao_rel"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/serial_code_txt"
            android:layout_marginLeft="@dimen/x10"
            android:textColor="@color/black"
            android:text="光照值，范围:  0-200000"></TextView>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/serial_code_txt"
            android:layout_marginTop="@dimen/y5"
            android:background="@drawable/edit_white_shape"
            app:layout_widthPercent="100%">

            <com.massky.sraum.view.ClearEditText
                android:id="@+id/edit_guangzhao_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:gravity="left"
                android:textSize="16sp"
                android:hint="请输入光照值"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="10dp"
                android:paddingTop="@dimen/y10"
                android:paddingRight="@dimen/x10"
                android:paddingBottom="@dimen/y10"
                app:layout_widthPercent="100%" />

            <!--<View-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_below="@+id/edit_nicheng"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:background="@color/gray"-->
            <!--app:layout_widthPercent="90%"></View>-->
        </androidx.percentlayout.widget.PercentRelativeLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/sel_pm_rel"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/birth"></RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/y15"
            android:background="@drawable/birthselect" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/birthdivider" />
            </RelativeLayout>

            <!--        <RelativeLayout-->
            <!--            android:layout_width="0dp"-->
            <!--            android:layout_height="match_parent"-->
            <!--            android:background="@color/black"-->
            <!--            android:layout_weight="1"></RelativeLayout>-->

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/birthdivider" />
            </RelativeLayout>

            <!--        <RelativeLayout-->
            <!--            android:layout_width="0dp"-->
            <!--            android:layout_height="match_parent"-->
            <!--            android:layout_weight="1"></RelativeLayout>-->

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/birthdivider" />
            </RelativeLayout>

            <!--        <RelativeLayout-->
            <!--            android:layout_width="0dp"-->
            <!--            android:layout_height="match_parent"-->
            <!--            android:layout_weight="1"></RelativeLayout>-->

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/div_four"
                android:visibility="gone"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/birthdivider" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/div_five"
                android:visibility="gone"
                android:layout_weight="1">

                <!--            <ImageView-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="250dp"-->
                <!--                android:layout_centerInParent="true"-->
                <!--                android:background="@drawable/birthdivider" />-->
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:orientation="horizontal"
            >

            <com.wheel.widget.WheelView
                android:id="@+id/wheel1"
                android:layout_width="60dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                />

            <com.wheel.widget.WheelView
                android:id="@+id/wheel2"
                android:layout_width="60dp"
                android:layout_height="250dp"
                android:layout_weight="1" />

            <com.wheel.widget.WheelView
                android:id="@+id/wheel3"
                android:layout_width="60dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                />

            <com.wheel.widget.WheelView
                android:id="@+id/wheel4"
                android:visibility="gone"
                android:layout_width="60dp"
                android:layout_height="250dp"
                android:layout_weight="1" />

            <com.wheel.widget.WheelView
                android:id="@+id/wheel5"
                android:visibility="gone"
                android:layout_width="60dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                />

        </LinearLayout>
    </RelativeLayout>




</RelativeLayout>