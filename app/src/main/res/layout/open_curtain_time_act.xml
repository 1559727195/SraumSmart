<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F6F7FA"
    android:orientation="vertical">
    <com.yanzhenjie.statusview.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:fitsView="@+id/root_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="20dp"
            app:srcCompat="@drawable/icon_t_back" />
        <TextView
            android:id="@+id/project_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="开合度时间"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/next_step_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="保存"
            android:textColor="@color/white" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y15"
        android:background="@color/white"
        android:paddingLeft="@dimen/x15"
        android:paddingTop="@dimen/y2"
        android:paddingRight="@dimen/x15"
        android:paddingBottom="@dimen/y2">

        <TextView
            android:id="@+id/txt_dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="时间"
            android:textColor="@color/dark_gray"
            android:textSize="14sp" />

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/txt_dev">

            <com.massky.sraum.view.ClearLengthEditText
                android:id="@+id/open_time_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/edit_gateway_shape"
                android:inputType="number"
                android:maxLength="3"
                android:gravity="left"
                android:hint=""
                android:padding="8dp"
                android:textSize="14sp"
                app:layout_widthPercent="40%"></com.massky.sraum.view.ClearLengthEditText>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/open_time_txt"
                app:layout_widthPercent="40%">

                <!--<Button-->
                <!--android:id="@+id/find_panel_btn"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:background="@drawable/icon_sousuo"-->
                <!--android:paddingLeft="3dp"-->
                <!--android:paddingRight="3dp"-->
                <!--android:textSize="@dimen/s13"-->
                <!--app:layout_widthPercent="30%" />-->
                <TextView
                    android:id="@+id/find_panel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x15"
                    android:text="秒"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp"></TextView>


            </RelativeLayout>
        </androidx.percentlayout.widget.PercentRelativeLayout>

    </RelativeLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30">

        <Button
            android:id="@+id/btn_test_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_bg"
            android:text="开始测算"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_widthPercent="70%" />

    </androidx.percentlayout.widget.PercentRelativeLayout>


    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30">

        <RelativeLayout
            android:layout_width="0dp"
            app:layout_widthPercent= "70%"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/x50"
                android:text="0"
                android:textSize="30sp"
                android:gravity="center"
                android:id="@+id/qian_txt"
                android:layout_height="@dimen/x50"
                android:layout_toLeftOf="@+id/bai_txt"
                android:layout_marginRight="@dimen/x20"
               android:background="@drawable/shape_noclick"
                ></TextView>
            <TextView
                android:layout_width="@dimen/x50"
                android:text="0"
                android:textSize="30sp"
                android:gravity="center"
                android:id="@+id/bai_txt"
                android:layout_height="@dimen/x50"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_noclick"
                ></TextView>
            <TextView
                android:layout_width="@dimen/x50"
                android:text="0"
                android:id="@+id/ge_txt"
                android:layout_marginLeft="@dimen/x20"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_toRightOf="@+id/bai_txt"
                android:layout_height="@dimen/x50"
                android:background="@drawable/shape_noclick"
                ></TextView>
        </RelativeLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>



</LinearLayout>