<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.yanzhenjie.statusview.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:fitsView="@+id/root_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="20dp"
            app:srcCompat="@drawable/icon_t_back" />

        <TextView
            android:id="@+id/project_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加网关"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/detairela"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y50"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/x80"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/gateid_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y15"
                android:layout_centerVertical="true"
                android:text="@string/gatedone"
                android:layout_marginRight="@dimen/x20"
                android:textColor="@color/e30"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/e30"
                android:text="dsfskldf"
                android:layout_toRightOf="@+id/gateid_txt" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/y5"
            android:layout_marginLeft="@dimen/x68"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x20"
                android:layout_centerVertical="true"
                android:textColor="@color/e30"
                android:text="@string/gatedthree"
                android:textSize="13sp" />

            <com.massky.sraum.view.ClearEditText
                android:id="@+id/gatedditexttwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView"
                android:background="@drawable/typein"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/x5"
                android:paddingRight="@dimen/x5"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="13sp" />


        </RelativeLayout>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y40"
            >

            <Button
                android:id="@+id/save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:height="@dimen/y30"
                android:background="@drawable/add_zigbee_device_btn"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_widthPercent="60%" />
        </androidx.percentlayout.widget.PercentRelativeLayout>
    </LinearLayout>
</LinearLayout>