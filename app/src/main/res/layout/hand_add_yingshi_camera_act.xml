<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yanzhenjie.statusview.StatusView
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:fitsView="@+id/root_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/green"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="20dp"
            app:srcCompat="@drawable/icon_t_back" />

        <TextView
            android:id="@+id/toolbar_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="手动添加"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/complute_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x8"
            android:layout_marginTop="8dp"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/serial_code_txt"
            android:layout_marginLeft="@dimen/x10"
            android:textColor="@color/black"
            android:text="序列号"></TextView>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/serial_code_txt"
            android:layout_marginTop="@dimen/y5"
            android:background="@drawable/edit_white_shape"
            app:layout_widthPercent="100%">

            <com.massky.sraum.view.ClearEditText
                android:id="@+id/edit_dev_serial_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:gravity="left"
                android:textSize="16sp"
                android:hint="请输入设备的序列号"
                android:maxLength="15"
                android:paddingLeft="10dp"
                android:paddingTop="@dimen/y10"
                android:paddingRight="@dimen/x10"
                android:paddingBottom="@dimen/y10"
                app:layout_widthPercent="100%" />

            <!--<View-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_below="@+id/edit_nicheng"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:background="@color/gray"-->
            <!--app:layout_widthPercent="90%"></View>-->
        </androidx.percentlayout.widget.PercentRelativeLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/qrcode_txt"
            android:layout_marginLeft="@dimen/x10"
            android:textColor="@color/black"
            android:text="验证码"></TextView>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/qrcode_txt"
            android:layout_marginTop="@dimen/y5"
            android:background="@drawable/edit_white_shape"
            app:layout_widthPercent="100%">

            <com.massky.sraum.view.ClearEditText
                android:id="@+id/edit_dev_yanzhengma"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:gravity="left"
                android:textSize="16sp"
                android:hint="请输入设备的验证码"
                android:maxLength="15"
                android:paddingLeft="10dp"
                android:paddingTop="@dimen/y10"
                android:paddingRight="@dimen/x10"
                android:paddingBottom="@dimen/y10"
                app:layout_widthPercent="100%" />

            <!--<View-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_below="@+id/edit_nicheng"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:background="@color/gray"-->
            <!--app:layout_widthPercent="90%"></View>-->
        </androidx.percentlayout.widget.PercentRelativeLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>

</LinearLayout>