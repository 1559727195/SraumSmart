<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="请将手机Wi-Fi连接到sraum-XXXXXX后,"

        android:textColor="@color/black"

        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:autoLink="all"
        android:text="返回此app"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:autoLink="all"
        android:visibility="gone"
        android:text="@string/no_connect"
        android:textColor="@color/gray"
        android:textSize="12sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_point"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="当前Wi-Fi:"
            android:layout_marginLeft="5dp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:textSize="12sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Massky5G"
            android:id="@+id/current_wifi"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/conn_btn_dev"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y30"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/add_zigbee_device_btn"
            android:text="去设置Wi-Fi"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_widthPercent="80%" />
    </androidx.percentlayout.widget.PercentRelativeLayout>


</LinearLayout>